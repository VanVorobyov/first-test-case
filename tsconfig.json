{
	"compilerOptions": {
		"target": "ES2020",
		"useDefineForClassFields": true,
		"lib": [
			"ES2020",
			"dom",
			"dom.iterable"
		],
		"module": "esnext",
		"skipLibCheck": true,
		
		/* Bundler mode */
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx",
		
		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		
		"baseUrl": ".",
		"paths": {
			"@/*": [
				"src/*"
			],
			"@assets/*": [
				"src/assets/*"
			],
			"@components/*": [
				"src/components/*"
			],
			"@hooks/*": [
				"src/hooks/*"
			],
			"@services/*": [
				"src/services/*"
			],
			"@store/*": [
				"src/store/*"
			],
			"@types/*": [
				"src/types/*"
			],
			"@utils/*": [
				"src/utils/*"
			]
		}
	},
	"include": [
		"src"
	],
	"references": [
		{
			"path": "./tsconfig.node.json"
		}
	],
}
